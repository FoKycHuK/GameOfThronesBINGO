@using GoTB.WebUI.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" type="text/css" rel="stylesheet"/>
    <script src="~/Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</head>
<body>
<div id="header">
    <div class="title">Game of Thrones BINGO!</div>
</div>
<div id="categories">
    <div id="cartPoints">
        @{ Html.RenderAction("CartInfo", "Cart"); }
    </div>
    <br/>
    @Html.ActionLink("На главную", "Index", "Home") <br/>
    <br/>
    @Html.ActionLink("Посмотреть выбранных", "Manage", "Cart") <br/>
    <br/>
    @{ Html.RenderAction("UserNameView", "Account"); }
    <br/>
    @{ Html.RenderAction("AdminPanel", "Account"); }
    <br/>
    @{ Html.RenderAction("SubmitButton", "Cart", new
       {
           bvm = new ButtonViewModel()
           {
               Controller = "Cart",
               Method = "Submit",
               TextButton = "Подтвердить выбор",
               TextIfNotNeeded = "Вы уже сделали окончательный выбор на этой неделе",
               NeedToShowButton = true
           }
       }); }
</div>
<div id="content">
    @RenderBody()
    @RenderSection("Scripts", false)
</div>
</body>
</html>

